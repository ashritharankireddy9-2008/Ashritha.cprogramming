#include<stdio.h>
main()
{
	int a[2][2],b[2][2],c[2][2];
	int i,j;
	printf("enter four elements of matrix A");
	for(i=0;i<2;i++)
	{
			{
			scanf("%d",&b[i][j]);
		}
	}
		for(i=0;i<2;i++)
		{
		for(j=0;j<2;j++)
		{
		   c[i][j]=a[i][j]+b[i][j];
		}
    }
    printf("the matrix addition is %n");
    for(i=0;i<2;i++)
    {
    	for(j=0;j<2;j++)
    	{
    		printf("%d\t",c[i][j]);
		}
		printf("\n");
	}
}
